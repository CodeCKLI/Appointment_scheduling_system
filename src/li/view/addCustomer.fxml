<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: darkblue;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="li.controller.AddCustomer">
   <children>
      <Label alignment="CENTER" layoutY="60.0" prefHeight="17.0" prefWidth="800.0" text="Add Customer" textFill="WHITE">
         <font>
            <Font name="Verdana Bold" size="36.0" />
         </font>
      </Label>
      <Label layoutX="174.0" layoutY="190.0" text="Name" textFill="WHITE">
         <font>
            <Font name="Verdana Bold" size="16.0" />
         </font>
      </Label>
      <Label layoutX="174.0" layoutY="230.0" text="Address" textFill="WHITE">
         <font>
            <Font name="Verdana Bold" size="16.0" />
         </font>
      </Label>
      <Label layoutX="173.0" layoutY="268.0" text="Postal Code" textFill="WHITE">
         <font>
            <Font name="Verdana Bold" size="16.0" />
         </font>
      </Label>
      <Label layoutX="173.0" layoutY="309.0" text="Phone Number" textFill="WHITE">
         <font>
            <Font name="Verdana Bold" size="16.0" />
         </font>
      </Label>
      <Label layoutX="173.0" layoutY="352.0" text="Country" textFill="WHITE">
         <font>
            <Font name="Verdana Bold" size="16.0" />
         </font>
      </Label>
      <TextField fx:id="customerNameField" layoutX="400.0" layoutY="188.0" />
      <TextField fx:id="customerAddressField" layoutX="400.0" layoutY="226.0" />
      <TextField fx:id="customerPostalField" layoutX="400.0" layoutY="266.0" />
      <TextField fx:id="customerPhoneField" layoutX="400.0" layoutY="307.0" />
      <Label layoutX="173.0" layoutY="393.0" text="Division" textFill="WHITE">
         <font>
            <Font name="Verdana Bold" size="16.0" />
         </font>
      </Label>
      <ComboBox fx:id="customerCountryField" layoutX="400.0" layoutY="350.0" onAction="#onCustomerCountryFieldAction" prefHeight="25.0" prefWidth="211.0" promptText="Countries" />
      <ComboBox fx:id="customerDivisionField" layoutX="400.0" layoutY="391.0" onAction="#onCustomerDivisionFieldAction" prefHeight="25.0" prefWidth="211.0" promptText="Divisions" />
      <Button fx:id="addCusSaveBTN" layoutX="231.0" layoutY="446.0" mnemonicParsing="false" onMouseClicked="#onAddCusSaveBTNClicked" prefHeight="25.0" prefWidth="114.0" text="Save" />
      <Button fx:id="addCusCancelBTN" layoutX="418.0" layoutY="446.0" mnemonicParsing="false" onMouseClicked="#onAddCusCancelBTNClicked" prefHeight="25.0" prefWidth="114.0" text="Cancel" />
      <Label fx:id="addCustomerMsgLabel" alignment="CENTER" layoutX="2.0" layoutY="33.0" prefHeight="20.0" prefWidth="800.0" text="Message Box" textFill="WHITE">
         <font>
            <Font name="Verdana Bold" size="16.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
